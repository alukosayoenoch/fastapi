def main():
    # guess the word
    word = 'transistor' #word of my choice
    tries=10  #attempts to get word form line 2
    display='_'*len(word) #display a line 10 times because there are 10 individual chars in line 2

    game_over = False
    while not game_over:
        print('you have ' + str(tries) + ' remaining')
        print(display)
        guess = input('please guess a letter: ')
    
        i= 0
        if guess in word:
            while word.find(guess, i) != -1:
                i= word.find(guess, i)
                display=display[:i]+guess+display[i + 1:]
                i += 1
            print('correct!')
        else:
            print('incorrect,try again')
            tries -= 1
        
        if word == display:
            print('you win! the word was ' +word )
            game_over = True
            main()
            
        if tries == 0:
            print('sorry,you loose')
            game_over = True
            main()

main()
